@model HNTAS.Web.UI.Models.OperatingAHNViewModel

@{
    ViewData["Title"] = "Check your eligibility to register a heat network";
    var fieldOrder = new[] { nameof(Model.IsExistingOrPlanned) };
}

<div class="govuk-width-container">
    <form asp-controller="HeatNetworkEligibility" asp-action="operatingAHN" method="post" novalidate>
        @Html.AntiForgeryToken()
        @await Html.PartialAsync("_ErrorSummary", fieldOrder)

        <div class="govuk-form-group @(ViewData.ModelState.ContainsKey("IsExistingOrPlanned") && ViewData.ModelState["IsExistingOrPlanned"].Errors.Any() ? "govuk-form-group--error" : "")">
            <fieldset class="govuk-fieldset" aria-describedby="is-existing-or-planned-hint @(ViewData.ModelState.ContainsKey("IsExistingOrPlanned") && ViewData.ModelState["IsExistingOrPlanned"].Errors.Any() ? "is-existing-or-planned-error" : "")">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">Are you operating an existing heat network or planning/designing/constructing a new one?</h1>
                </legend>

                @* Individual field error message *@
                @if (ViewData.ModelState.ContainsKey("IsExistingOrPlanned") && ViewData.ModelState["IsExistingOrPlanned"].Errors.Any())
                {
                    <span id="is-existing-or-planned-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState["IsExistingOrPlanned"].Errors[0].ErrorMessage
                    </span>
                }

                <div class="govuk-radios" data-module="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="existingYes" name="IsExistingOrPlanned" type="radio" value="true" @(Model?.IsExistingOrPlanned == true ? "checked" : "")>
                        <label class="govuk-label govuk-radios__label" for="existingYes">Yes</label>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="existingNo" name="IsExistingOrPlanned" type="radio" value="false" @(Model?.IsExistingOrPlanned == false ? "checked" : "")>
                        <label class="govuk-label govuk-radios__label" for="existingNo">No</label>
                    </div>
                </div>
            </fieldset>
        </div>

        <button class="govuk-button" data-module="govuk-button" type="submit">Continue</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.ResultMessage as string))
    {
        <div class="govuk-inset-text">@ViewBag.ResultMessage</div>
    }
    @if (ViewBag.ShowCreateAccountButton != null && ViewBag.ShowCreateAccountButton)
    {
        <div class="app-button-wrapper">
            <a asp-controller="Home" role="button" asp-action="Index" data-module="govuk-button" draggable="false" class="govuk-button govuk-button--secondary">Create account</a>
        </div>

    }
</div>