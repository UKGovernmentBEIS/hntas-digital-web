@model HNTAS.Web.UI.Models.LocatedInUkViewModel

@{
    ViewData["Title"] = "Check your eligibility to register a heat network";
    var fieldOrder = new[] { nameof(Model.IsInUK) };
}
<div class="govuk-width-container">
    <form asp-controller="HeatNetworkEligibility" asp-action="LocatedInUk" method="post" novalidate>
        @Html.AntiForgeryToken()
        @await Html.PartialAsync("_ErrorSummary", fieldOrder)

        <div class="govuk-form-group @(ViewData.ModelState.ContainsKey("IsInUK") && ViewData.ModelState["IsInUK"].Errors.Any() ? "govuk-form-group--error" : "")">
            <fieldset class="govuk-fieldset" aria-describedby="is-in-uk-hint @(ViewData.ModelState.ContainsKey("IsInUK") && ViewData.ModelState["IsInUK"].Errors.Any() ? "is-in-uk-error" : "")">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">Is the network located in England, Wales, or Scotland?</h1>
                </legend>

                @if (ViewData.ModelState.ContainsKey("IsInUK") && ViewData.ModelState["IsInUK"].Errors.Any())
                {
                    <span id="is-in-uk-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState["IsInUK"].Errors[0].ErrorMessage
                    </span>
                }

                <div class="govuk-radios" data-module="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="ukYes" name="IsInUK" type="radio" value="true" @(Model?.IsInUK == true ? "checked" : "")>
                        <label class="govuk-label govuk-radios__label" for="ukYes">Yes</label>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="ukNo" name="IsInUK" type="radio" value="false" @(Model?.IsInUK == false ? "checked" : "")>
                        <label class="govuk-label govuk-radios__label" for="ukNo">No</label>
                    </div>
                </div>
            </fieldset>
        </div>

        <button class="govuk-button" data-module="govuk-button" type="submit">Continue</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.ResultMessage as string))
    {
        <div class="govuk-inset-text">@ViewBag.ResultMessage</div>
    }
</div>