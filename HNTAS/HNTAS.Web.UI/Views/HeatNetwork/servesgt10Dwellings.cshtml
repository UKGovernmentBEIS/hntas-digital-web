@model HNTAS.Web.UI.Models.ServesGt10DwellingsViewModel

@{
    ViewData["Title"] = "Check your eligibility to register a heat network";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @* Added grid column *@

        <form asp-controller="HeatNetwork" asp-action="ServesGt10Dwellings" method="post" novalidate>
            @* Error summary *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="govuk-error-summary" role="alert" data-module="govuk-error-summary">
                    @* Added data-module *@
                    <h2 class="govuk-error-summary__title">There is a problem</h2>
                    <div class="govuk-error-summary__body">
                        @* Added error summary body *@
                        <ul class="govuk-list govuk-error-summary__list">
                            @foreach (var entry in ViewData.ModelState)
                            {
                                foreach (var error in entry.Value.Errors)
                                {
                                    <li>
                                        <a href="#@entry.Key-error"> @error.ErrorMessage </a> @* Removed class from li and added href to a *@
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            }
            <div class="govuk-form-group @(ViewData.ModelState["ServesMoreThan10Dwellings"]?.Errors.Count > 0 ? "govuk-form-group--error" : "")">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        @* Changed legend size to l *@
                        <h1 class="govuk-fieldset__heading">
                            @* Changed h1 to govuk-fieldset__heading *@
                            Does the heat network serve more than 10 dwellings?
                        </h1>
                    </legend>
                    @if (ViewData.ModelState["ServesMoreThan10Dwellings"]?.Errors.Count > 0)
                    {
                        <p id="ServesMoreThan10Dwellings-error" class="govuk-error-message">
                            @* Added p tag for error message with id *@
                            <span class="govuk-visually-hidden">Error:</span> @* Added visually hidden span *@
                            @ViewData.ModelState["ServesMoreThan10Dwellings"].Errors[0].ErrorMessage
                        </p>
                    }
                    <div class="govuk-radios" data-module="govuk-radios">
                        @* Added data-module *@
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="dwellingsYes" name="ServesMoreThan10Dwellings" type="radio" value="true" @(Model.ServesMoreThan10Dwellings == true ? "checked" : "") /> @* Updated checked attribute *@
                            <label class="govuk-label govuk-radios__label" for="dwellingsYes">Yes</label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="dwellingsNo" name="ServesMoreThan10Dwellings" type="radio" value="false" @(Model.ServesMoreThan10Dwellings == false ? "checked" : "") /> @* Updated checked attribute *@
                            <label class="govuk-label govuk-radios__label" for="dwellingsNo">No</label>
                        </div>
                    </div>
                </fieldset>
            </div>

            <button class="govuk-button" data-module="govuk-button" type="submit">Continue</button> @* Added data-module *@
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.ResultMessage as string))
        {
            <div class="govuk-inset-text">@ViewBag.ResultMessage</div>
        }
    </div>
</div>