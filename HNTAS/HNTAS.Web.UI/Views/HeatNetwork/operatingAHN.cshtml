@model HNTAS.Web.UI.Models.OperatingAHNViewModel

@{
    ViewData["Title"] = "Check your eligibility to register a heat network";
}

<div class="govuk-width-container">
    <form asp-controller="HeatNetwork" asp-action="operatingAHN" method="post" novalidate>
        @* Error summary *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="govuk-error-summary" role="alert">
                <h2 class="govuk-error-summary__title">There is a problem</h2>
                <ul class="govuk-list govuk-error-summary__list">
                    @foreach (var entry in ViewData.ModelState)
                    {
                        foreach (var error in entry.Value.Errors)
                        {
                            <li id="@entry.Key-error" class="govuk-error-message">
                                <a href="#@entry.Key-error"> @error.ErrorMessage </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        }
        <div class="govuk-form-group" @(ViewData.ModelState["IsExistingOrPlanned"]?.Errors.Count > 0 ? "govuk-form-group--error" : "")">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                    <h1>Are you operating an existing heat network or planning/designing/constructing a new one?</h1>
                </legend>
                @if (ViewData.ModelState["IsExistingOrPlanned"]?.Errors.Count > 0)
                {
                    <span class="govuk-error-message">
                        @ViewData.ModelState["IsExistingOrPlanned"].Errors[0].ErrorMessage
                    </span>
                }
                <div class="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="existingYes" name="IsExistingOrPlanned" type="radio" value="true" checked="@Model.IsExistingOrPlanned" />
                        <label class="govuk-label govuk-radios__label" for="existingYes">Yes</label>
                    </div>
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="existingNo" name="IsExistingOrPlanned" type="radio" value="false" checked="@(!Model.IsExistingOrPlanned)" />
                        <label class="govuk-label govuk-radios__label" for="existingNo">No</label>
                    </div>
                </div>
            </fieldset>
        </div>

        <button class="govuk-button" type="submit">Continue</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.ResultMessage as string))
    {
        <div class="govuk-inset-text">@ViewBag.ResultMessage</div>
    }
    @if (ViewBag.ShowCreateAccountButton)
    {
        <div class="app-button-wrapper">
            <a asp-controller="Home" role="button" asp-action="Index" data-module="govuk-button" draggable="false" class="govuk-button">Create account</a>
        </div>
        
    }
</div>